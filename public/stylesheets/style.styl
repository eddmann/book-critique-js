@css {
  @import url(http://fonts.googleapis.com/css?family=Goudy+Bookletter+1911); 
  body,html,div,img,label,p,h1,h2,h3,h4,ul,ol,li,form,a,th,td{border:0;outline:none;margin:0;padding:0}
  ul,ol{list-style:none}
  img{border:0}
  a{text-decoration:none;color:#ffffff}
  .clear{content:".";display:block;height:0;clear:both;visibility:hidden}
}

light = #3A3A3A
dark  = #191919

body
  background: url(../images/bg.png) dark
  font: 14px Arial, Helvetica, 'Helvetica Neue', Verdana, sans-serif
  color: #FFFFFF

#content
  width: 700px
  margin: 50px auto
  header
    width: 700px
    margin-bottom: 30px
    h1
      font: 50px 'Goudy Bookletter 1911', serif
      font-weight: 100
      letter-spacing: 1px
      float: left
    nav
      margin-top: 20px
      float: right
  #books
    margin: 30px 0
    .book
      margin: 0 50px 40px 0
      float: left
      &:nth-child(3n)
        margin: 0 0 40px 0
      img
        border: 10px solid dark
        width: 180px
        margin-bottom: 15px 
        &:hover
          border: 10px solid light
      a
        -moz-border-radius: 40px
        -webkit-border-radius: 40px
        width: 20px
        height: 18px
        display: block
        float: left
        margin-left: 15px
        text-align: center
        padding-top: 3px
        &:first-child
          margin-left: 20px
        &:hover
          cursor: pointer 
        &.r1.selected, &.r1:hover
          background: #710101
        &.r2.selected, &.r2:hover
          background: #995365
        &.r3.selected, &.r3:hover
          background: #3CA656
        &.r4.selected, &.r4:hover
          background: #B9AB7B
        &.r5.selected, &.r5:hover
          background: #FF73A4

  footer
    margin-top: 30px
    text-align: center
    letter-spacing: 1px
    color: lighten(light, 30%)

#overlay
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(black, 0.8)
  z-index: 500
  transition: opacity 0.3s
  opacity: 1
  visibility: visible
  &.hide
    opacity: 0
    visibility: hidden

#dialog
  color: black
  position: fixed
  padding: 5px 10px
  background: white
  border-radius: 5px
  box-shadow: 0 0 50px rgba(black, 0.4)
  z-index: 1000
  text-align: center
  visibility: visible
  opacity: 1
  padding: 15px
  
  #drop
    height: 236px
    width: 180px
    border: 3px dashed #ccc
    padding: 10px
    margin-bottom: 15px
    background: url(../images/upload.png) no-repeat center

